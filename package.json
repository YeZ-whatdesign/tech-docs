{
  "name": "tech-docs-editor",
  "version": "1.0.0",
  "description": "在线编辑markdown知识库文档系统",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "server": "node server/index.js",
    "dev:full": "concurrently \"npm run server\" \"npm run dev\"",
    "dev:viewer": "cd docs-viewer && npm run dev",
    "install:viewer": "cd docs-viewer && npm install",
    "dev:all": "concurrently \"npm run server\" \"npm run dev\" \"npm run dev:viewer\""
  },
  "dependencies": {
    "@codemirror/commands": "^6.3.0",
    "@codemirror/lang-markdown": "^6.2.1",
    "@codemirror/search": "^6.5.4",
    "@codemirror/state": "^6.3.1",
    "@codemirror/theme-one-dark": "^6.1.2",
    "@codemirror/view": "^6.21.3",
    "@element-plus/icons-vue": "^2.1.0",
    "axios": "^1.4.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "chokidar": "^3.5.3",
    "codemirror": "^6.0.1",
    "cors": "^2.8.5",
    "element-plus": "^2.3.8",
    "express": "^4.18.2",
    "fs-extra": "^11.1.1",
    "highlight.js": "^11.9.0",
    "jsonwebtoken": "^9.0.2",
    "marked": "^9.1.2",
    "multer": "^1.4.5-lts.1",
    "path": "^0.12.7",
    "vue": "^3.3.4",
    "vue-router": "^4.2.4"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.2.3",
    "concurrently": "^8.2.1",
    "vite": "^4.4.5"
  }
}
